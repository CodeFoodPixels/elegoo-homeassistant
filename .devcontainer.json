{
  "name": "danielcherubini/elegoo_printer",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "postCreateCommand": "make setup && sudo sh -c 'curl -L https://github.com/AlexxIT/go2rtc/releases/latest/download/go2rtc_linux_amd64 -o /usr/local/bin/go2rtc && chmod +x /usr/local/bin/go2rtc'",
  "forwardPorts": [8123, 1984],
  "remoteEnv": {
    "DEBUG": "false",
    "VENV": ".dev",
    "UV_LINK_MODE": "copy"
  },
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant",
      "onAutoForward": "notify"
    },
    "1984": {
      "label": "go2rtc",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "github.vscode-pull-request-github",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ryanluker.vscode-coverage-gutters"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.tabSize": 4,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": false,
        "files.trimTrailingWhitespace": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": ["ffmpeg", "libturbojpeg0", "libpcap-dev"]
    }
  }
}

